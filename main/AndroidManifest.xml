    package="com.arndroidholics.hp.onlinegiftshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".user_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".user_home" />
        <activity android:name=".ShoppingCartDetail" />
        <activity android:name=".PaymentScreen" />
        <activity android:name=".address_screen" />
        <activity android:name=".OrderConfirmation" />
        <activity android:name=".myorders" />
        <activity android:name=".mydorderdetails" />
        <activity android:name=".search" />
        <activity android:name=".signup"></activity>
    </application>

</manifest>